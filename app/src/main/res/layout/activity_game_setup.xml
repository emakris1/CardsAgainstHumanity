<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cardsagainsthumanity.app.GameSetup">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text_num_players"
        android:id="@+id/txtNumPlayers"
        android:layout_alignTop="@+id/spinnerNumPlayers"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/spinnerNumPlayers"
        android:layout_alignParentTop="false"
        android:layout_toLeftOf="@+id/spinnerNumPlayers"
        android:gravity="center|left" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_num_players"
        android:entries="@array/array_num_players"
        android:id="@+id/spinnerNumPlayers"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:spinnerMode="dialog"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text_max_awesome_points"
        android:id="@+id/txtMaxAwesomePoints"
        android:layout_alignTop="@+id/spinnerMaxAwesomePoints"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/spinnerMaxAwesomePoints"
        android:gravity="center|left"
        android:layout_toRightOf="@+id/spinnerMaxAwesomePoints" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_max_awesome_points"
        android:entries="@array/array_max_awesome_points"
        android:id="@+id/spinnerMaxAwesomePoints"
        android:layout_below="@+id/spinnerNumPlayers"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:spinnerMode="dialog"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_create_game"
        android:id="@+id/btnCreateGame"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp" />

</RelativeLayout>
